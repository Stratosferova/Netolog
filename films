

postgres=# create table person2content (person_id int, film_id int, person_type text, constraint pk_person2content primary key (person_id, film_id));
CREATE TABLE
postgres=# insert into person2content (person_id, film_id, person_type) values (450254, 644182, 'actor'), (586450, 451093, 'director'), (459863, 911886, 'actor'), (454602, 632307, 'actor'), (449147, 625812, 'director');
INSERT 0 5
postgres=# create table films (title text, id serial primary key, country text, box_office int, release_year date);
CREATE TABLE
postgres=# insert into films (title, id, country, box_office, release_year)
