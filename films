postgres=# create table persons (id serial primary key, fio text);
CREATE TABLE
postgres=# insert into persons (id, fio) values (450254,'Bruce Willis'), (586450, 'Christopher Nolan'), (459863, 'Amy Adams'), (454602, 'Denise Richards'), (449147, 'Ridley Scott');
